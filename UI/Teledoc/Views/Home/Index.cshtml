@using Teledoc.Domain.Entities.Clients

@*@inject IEnumerable<Client> Client*@

@{
    ViewData["Title"] = "Главная";
}

    <div class="container">
        <a>Create New</a>
        <table class="table">
            <thead>
                <tr>
                    <td></td>
                    <td>ClientsINN</td>
                    <td>Name</td>
                    <td>Organization</td>
                    <td>AddTime</td>
                    <td>UpdateTime</td>
                    <td><a asp-controller="Home" asp-action="ClientsDetails">Учредители</a></td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                <tr>
                    <td>
                        <a asp-controller="Home" asp-action="ClientsDetails" asp-route-id="@client.Id">
                            <i class="fa fa-info-circle"></i>
                        </a>
                    </td>
                    <td>@client.Id</td>
                    <td>@client.ClientsINN</td>
                    <td>@client.Name</td>
                    <td>@client.Organization</td>
                    <td>@client.AddTime</td>
                    <td>@client.UpdateTime</td>
                    <td>@client.Founder</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@client.Id" class="btn btn-success">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
